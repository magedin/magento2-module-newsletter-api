<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <!-- Managing Customer Subscriptions -->
    <route url="/V1/newsletter/subscriptions/mine" method="GET">
        <service class="MagedIn\NewsletterApi\Api\NewsletterManagementInterface" method="getSubscriptionForCustomer"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>
    <route url="/V1/newsletter/subscriptions/mine" method="POST">
        <service class="MagedIn\NewsletterApi\Api\NewsletterManagementInterface" method="subscribeCustomer"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>
    <route url="/V1/newsletter/subscriptions/mine" method="DELETE">
        <service class="MagedIn\NewsletterApi\Api\NewsletterManagementInterface" method="unsubscribeCustomer"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <!-- Managing Guest Subscriptions -->
    <route url="/V1/newsletter/guest-subscriptions" method="POST">
        <service class="MagedIn\NewsletterApi\Api\NewsletterManagementInterface" method="subscribe"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
